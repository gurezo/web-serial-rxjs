{
  "name": "example-react",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/example-react/src",
  "projectType": "application",
  "tags": ["type:app", "scope:examples"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/example-react",
        "configFile": "apps/example-react/vite.config.ts",
        "skipTypeCheck": true
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "example-react:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "example-react:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "example-react:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "example-react:build:production"
      },
      "configurations": {
        "production": {
          "buildTarget": "example-react:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/apps/example-react"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/apps/example-react"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  }
}
